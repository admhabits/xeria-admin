
<% include ../Partials/HeaderRoot  %>

    <body class="authentication-bg authentication-bg-pattern">

        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="text-center w-75 m-auto">
                                    <a href="index">
                                        <span><img src="public/assets/images/logo-dark.png" alt="" height="18"></span>
                                    </a>
                                    <p class="text-muted mb-4 mt-3">Enter your email address and we'll send you an email with instructions to reset your password.</p>
                                </div>

                                <h5 class="auth-title">Recover Password</h5>

                                <form action="index">
                                    <div class="form-group mb-3">
                                        <label for="emailaddress">Email address</label>
                                        <input class="form-control" type="email" id="emailaddress" required="" placeholder="Enter your email">
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-danger btn-block" type="submit"> Reset Password </button>
                                    </div>

                                </form>    
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <p class="text-muted">Back to <a href="pages_login" class="text-muted ml-1"><b class="font-weight-semibold">Log in</b></a></p>
                            </div> 
                        </div>
                    </div> 
                </div>
            </div>
        </div>


        <footer class="footer footer-alt">
            <%= new Date().getFullYear(); %> &copy; Xeria theme by <a href="" class="text-muted">Coderthemes</a> 
        </footer>

        <script src="public/assets/js/vendor.min.js"></script>
        <script src="public/assets/js/app.min.js"></script>
    </body>
    <% include ../Partials/FooterRoot  %>